<%= simple_form_for(resource, as: resource_name,
    url: registration_path(resource_name)),
    defaults: { input_html: { class: 'form-horizontal' } } do |f| %>
  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">
      Your name is:
    </label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="name">
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-3 control-label">
      Your email is:
    </label>
    <div class="col-sm-4">
      <%= f.input :email, required: true, id: "email"%>
    </div>
  </div>
  <span class="h-divider"></span>
  <div class="form-group">
    <label for="password" class="col-sm-3 control-label">
      Password:
    </label>
    <div class="col-sm-4">
      <%= f.input :password, required: true,
          hint: ("#{@minimum_password_length} characters minimum" if @validatable)
          id: "password" %>
    </div>
  </div>
  <div class="form-group">
    <label for="password_c" class="col-sm-3 control-label">
      Confirm your password:
    </label>
    <div class="col-sm-4">
      <%= f.input :password_confirmation, required: true, id: "password_c"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-3">
      <button type="submit" class="btn btn-default btn-lg"
              id="submit-button">
        <span class="glyphicon glyphicon-send"></span> Submit
      </button>
    </div>
  </div>
<% end %>
